<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/fab_margin"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context=".readingLayout">
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:textSize="18sp"
            android:layout_alignTop="@id/button3"/>
        <TextView
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reading"
            android:layout_below="@id/button3"
            android:layout_centerHorizontal="true"
            android:textSize="27sp"
            android:textColor="#010809"
            />
        <TextView
            android:id="@+id/read"
            android:layout_below="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="from:"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/info1"
            android:layout_below="@id/read"
            android:text="None"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/read1"
            android:layout_below="@id/info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to:"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/info2"
            android:layout_below="@id/read1"
            android:text="None"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/read2"
            android:layout_below="@id/info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cc:"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/info3"
            android:layout_below="@id/read2"
            android:text="None"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/read3"
            android:layout_below="@id/info3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bcc:"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/info4"
            android:layout_below="@id/read3"
            android:text="None"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/read4"
            android:layout_below="@id/info4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="subject:"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/info5"
            android:layout_below="@id/read4"
            android:text="None"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/read5"
            android:layout_below="@id/info5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="body:"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/info6"
            android:layout_below="@id/read5"
            android:text="None"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button5"
            android:text="send"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info6"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</ScrollView>